    <servlet-mapping>
        <servlet-name>queryFinishedOrder</servlet-name>
        <url-pattern>/queryFinishedOrder</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>queryAllUnfinishedOrder</servlet-name>
        <url-pattern>/queryAllUnFinishedOrder</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>queryAllFinishedOrder</servlet-name>
        <url-pattern>/queryAllFinishedOrder</url-pattern>

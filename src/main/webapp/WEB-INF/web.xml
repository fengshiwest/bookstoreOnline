    </servlet>

    <servlet>
        <servlet-name>updateOrderBookNum</servlet-name>
        <servlet-class>com.servlet.UpdateOrderBookNumServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>queryUnfinishedOrder</servlet-name>
        <servlet-class>com.servlet.QueryUnfinishedOrderServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>queryFinishedOrder</servlet-name>
        <servlet-class>com.servlet.QueryFinishedOrderServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>queryAllUnfinishedOrder</servlet-name>
        <servlet-class>com.servlet.QueryAllUnfinishedOrderServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>queryAllFinishedOrder</servlet-name>
        <servlet-class>com.servlet.QueryAllFinishedOrderServlet</servlet-class>
    </servlet>



    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>queryBookByID</servlet-name>
        <url-pattern>/queryBookByID</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>queryBookByAuthor</servlet-name>
        <url-pattern>/queryBookByAuthor</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>addBook</servlet-name>
        <url-pattern>/addBook</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>queryUser</servlet-name>
        <url-pattern>/queryUser</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>addOrder</servlet-name>
